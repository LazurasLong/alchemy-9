  gem 'factory_girl_rails'
  gem 'capybara'
  gem 'guard-rspec'
  gem 'rspec-rails'
  gem 'shoulda-matchers'
  gem 'spork' #, "> 0.9.0.rc"
  gem 'guard-spork'
  gem 'launchy'
  gem 'pry-remote'
  gem 'pry-rails'
  gem 'rb-inotify'
end

group :development do
  gem 'letter_opener'
  gem 'bullet'
  gem 'rack-mini-profiler'
end

