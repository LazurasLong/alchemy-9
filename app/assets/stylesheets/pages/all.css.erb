body {
	background-color: #f0f0f0;
	padding:0px;
	margin:0px;
	width:100%;
	height:100%;
}

#container {
	overflow: auto;
	width: 980px;
	margin: 0 auto;
	padding: 10px;
}

#ajax-preloader {
  /*background: url("<%= asset_path("loading.png") %>");*/
  position: fixed;
  width: 100%;
  min-height: 100%; 
  left: 0;
  top: 0;
  overflow:auto;
  display: none;
}

#ajax-preloader #loading {
  position: fixed;
  background: url("<%= asset_path("ajax-loader.gif") %>") center center no-repeat;
  width: 100%;
  min-height: 100%; 
}